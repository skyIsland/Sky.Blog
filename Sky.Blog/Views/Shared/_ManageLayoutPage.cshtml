<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewBag.Title - 后台管理</title>
    <link href="~/Plugins/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Plugins/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/css/global.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body class="layui-body-admin">
    <div class="layui-layout-admin">
        <div class="layui-header">
            <a href="#" class="logo layui-left"><img src="" alt="">傻大蒙</a>
        </div>
        <div class="layui-side" style="background-color:#393D49; color:white;">
            <div style="height: 100px;padding: 5px;line-height: 40px;text-align: center;">
                <p>欢迎您，主人</p>
                <a href="@Url.Action("SignOut","Account")" style="border-radius:8px;" class="layui-btn layui-btn-small">退出</a>
            </div>
            <ul class="layui-nav layui-nav-tree">
                <li class="layui-nav-item layui-nav-title item-show" nav-item-num="4">
                    <a>内容管理<i class="layui-icon layui-right">&#xe619;</i></a>
                </li>
                <li class="layui-nav-item">
                    <a href="@Url.Action("List","Article")">文章管理</a>
                </li>
                <li class="layui-nav-item">
                    <a href="@Url.Action("List","Category")">分类管理</a>
                </li>
                <li class="layui-nav-item ">
                    <a href="javascript:;">留言管理</a>
                </li>
                @*<li class="layui-nav-item">
                    <a href="@Url.Action("List","Log")">操作日志</a>
                </li>*@
                <li class="layui-nav-item">
                    <a href="@Url.Action("BasicSetting","Setting")">设置</a>
                </li>
            </ul>
        </div>
        <div class="layui-body">
            @RenderBody()
        </div>
        <div class="layui-footer">
            <div class="layui-main">
                Sky © <a href="http://www.shadameng.xyz">www.shadameng.xyz</a>
            </div>
        </div>
    </div>
    <script src="~/Plugins/layui/layui.js"></script>
    <script src="~/Scripts/global.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
